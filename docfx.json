{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "_src",
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "files": [ "RichHudClient.csproj" ]
        }
      ],
      "output": "api",
      "filter": "filterConfig.yml",
      "categoryLayout": "flattened",
      "namespaceLayout": "flattened",
      "enumSortOrder": "declaringOrder",
      "includeExplicitInterfaceImplementations": true
    }
  ],
  "build": {
    "xref": [
      "https://keensoftwarehouse.github.io/SpaceEngineersModAPI/xrefmap.yml"
    ],
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "exclude": [ "_site/**", "_src/**", "api-supplements/**", ".git/**", "tools/**", "googlefe53ea247c41569b.html" ]
      }
    ],
    "overwrite": [ "api-supplements/**/*.md" ],
    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],
    "output": "_site",
    "template": [
        "default",
        "modern",
        "templates/custom"
    ],
    "globalMetadata": {
      "_appName": "Rich HUD Framework",
      "_appTitle": "Rich HUD Framework",
      "_memberLayout": "samePage",
      "_appLogoPath": "images/logo.svg",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "pdf": false
    }
  }
}